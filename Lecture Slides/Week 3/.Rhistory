## Convert abbreviation for month into number
Manaus_long <-
Manaus_long %>%
mutate( Month = case_when(
Month == "JAN" ~ "01", Month == "FEB" ~ "02", Month == "MAR" ~ "03",
Month == "APR" ~ "04", Month == "MAY" ~ "05", Month == "JUN" ~ "06",
Month == "JUL" ~ "07", Month == "AUG" ~ "08", Month == "SEP" ~ "09",
